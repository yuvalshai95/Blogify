{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "module": "CommonJs",
    "types": ["jest", "node"],
    "esModuleInterop": true // Enabling esModuleInterop simplifies the import syntax and makes it more consistent with the ES module syntax.
  },
  "include": ["src/**/*.spec.ts", "src/**/*.d.ts"]
}
